<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center my-4">Sign Up</h2>
      <form class="signup-form">
        <div class="form-group mb-3">
          <label for="username-signup">Username:</label>
          <input class="form-control" type="text" id="username-signup" required />
        </div>
        <div class="form-group mb-3">
          <label for="email-signup">Email:</label>
          <input class="form-control" type="email" id="email-signup" required />
        </div>
        <div class="form-group mb-3">
          <label for="password-signup">Password:</label>
          <input class="form-control" type="password" id="password-signup" required />
        </div>
        <button class="btn btn-success w-100" type="submit">Sign Up</button>
      </form>
      <div class="text-center mt-3">
        <p>Already have an account? <a href="/login">Log in here</a>.</p>
      </div>
    </div>
  </div>
</div>
<script src="/js/login.js"></script>