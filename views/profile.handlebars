<div class="container my-4">
  <h2>Welcome, {{username}}!</h2>
  <section>
    <h3>Create a New Post</h3>
    <form class="new-post-form">
      <div class="form-group mb-3">
        <label for="post-title">Post Title:</label>
        <input class="form-control" type="text" id="post-title" required />
      </div>
      <div class="form-group mb-3">
        <label for="post-desc">Post Content:</label>
        <textarea class="form-control" id="post-desc" rows="5" required></textarea>
      </div>
      <button class="btn btn-primary" type="submit">Create Post</button>
    </form>
  </section>
  <hr />
  <section>
    <h3>Your Posts</h3>
    {{#if posts}}
      <ul class="list-group">
        {{#each posts}}
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <a href="/post/{{id}}">{{title}}</a>
            <button class="btn btn-danger btn-sm" data-id="{{id}}">Delete</button>
          </li>
        {{/each}}
      </ul>
    {{else}}
      <p>No posts yet.</p>
    {{/if}}
  </section>
</div>
<script src="/js/profile.js"></script>