<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center my-4">Login</h2>
      <form class="login-form">
        <div class="form-group mb-3">
          <label for="email-login">Email:</label>
          <input class="form-control" type="email" id="email-login" required />
        </div>
        <div class="form-group mb-3">
          <label for="password-login">Password:</label>
          <input class="form-control" type="password" id="password-login" required />
        </div>
        <button class="btn btn-primary w-100" type="submit">Login</button>
      </form>
      <hr />
      <h2 class="text-center my-4">Sign Up</h2>
      <form class="signup-form">
        <div class="form-group mb-3">
          <label for="username-signup">Username:</label>
          <input class="form-control" type="text" id="username-signup" required />
        </div>
        <div class="form-group mb-3">
          <label for="email-signup">Email:</label>
          <input class="form-control" type="email" id="email-signup" required />
        </div>
        <div class="form-group mb-3">
          <label for="password-signup">Password:</label>
          <input class="form-control" type="password" id="password-signup" required />
        </div>
        <button class="btn btn-success w-100" type="submit">Sign Up</button>
      </form>
    </div>
  </div>
</div>
<script src="/js/login.js"></script>